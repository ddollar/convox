apiVersion: apiextensions.k8s.io/v1
kind: CustomResourceDefinition
metadata:
  name: atoms.atom.convox.com
spec:
  group: atom.convox.com
  versions:
    - name: v1
      served: true
      storage: true
      schema:
        openAPIV3Schema:
          type: object
          properties:
            spec:
              type: object
              properties:
                conditions:
                  type: array
                  items:
                    type: object
                    properties:
                      apiVersion:
                        type: string
                      conditions:
                        type: object
                        x-kubernetes-preserve-unknown-firlds: true
                currentVersion:
                  type: string
                previousVersion:
                  type: string
                progressDeadlineSeconds:
                  type: integer
      additionalPrinterColumns:
      - name: Status
        type: string
        jsonPath: .status
  scope: Namespaced
  names:
    plural: atoms
    singular: atom
    kind: Atom
    categories:
    - convox
---
apiVersion: apiextensions.k8s.io/v1
kind: CustomResourceDefinition
metadata:
  name: atomversions.atom.convox.com
spec:
  group: atom.convox.com
  versions:
    - name: v1
      served: true
      storage: true
      schema:
        openAPIV3Schema:
          type: object
          properties:
            spec:
              type: object
              properties:
                release:
                  type: string
                template:
                  type: string
  scope: Namespaced
  names:
    plural: atomversions
    singular: atomversion
    kind: AtomVersion
    categories:
    - convox
